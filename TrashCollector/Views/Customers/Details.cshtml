@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h3>Balance Details</h3>

<div>
    <h4> @Html.DisplayFor(model => model.FirstName)  @Html.DisplayFor(model => model.LastName)</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.customerBalance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.customerBalance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.currentMonthlyBalance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.currentMonthlyBalance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.currentMonthlyCharges)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.currentMonthlyCharges)
        </dd>
        
    </dl>
</div>
<div class="col-lg-6">
    <div id="map" style="height: 400px; width: 100%;"></div>

    <script>
                    var map;
                    function initMap() {
                        map = new google.maps.Map(document.getElementById("map"), {
                            center: { lat: @Model.Latitude, lng: @Model.Longitude },
                            zoom: 10,
                        });
                        new google.maps.Marker({
                            position: { lat: @Model.Latitude, lng: @Model.Longitude },
                            map,
                        });
                    }
    </script>
    
</div>
<div>
    <a asp-action="Index">Back to Main</a>
</div>
